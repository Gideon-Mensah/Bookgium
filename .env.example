# Environment variables for Multi-Tenant Render deployment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production
RENDER=True

# Multi-Tenant Configuration
TENANT_MODEL=clients.Client
TENANT_DOMAIN_MODEL=clients.Domain

# Database (PostgreSQL required for multi-tenancy)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Domain Configuration
ALLOWED_HOSTS=.onrender.com,.yourdomain.com,localhost,127.0.0.1

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@bookgium.com

# Redis Cache (optional but recommended)
REDIS_URL=redis://localhost:6379/1

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
DJANGO_LOG_LEVEL=INFO

# Multi-Tenant Specific Settings
PUBLIC_SCHEMA_NAME=public
PUBLIC_SCHEMA_URLCONF=bookgium.public_urls
